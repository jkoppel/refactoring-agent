{
  "name": "github-refactoring-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for automated GitHub repository refactoring using Claude Code agents",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "github-refactoring-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js --stdio",
    "dev": "tsc && node dist/index.js",
    "dev:stdio": "tsc && node dist/index.js --stdio"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@octokit/rest": "^20.0.2",
    "dotenv": "^16.4.1",
    "execa": "^9.6.0",
    "ndjson": "^2.0.0",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/ndjson": "^2.0.4",
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "",
  "license": "MIT"
}
